<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <EditText
        android:id="@+id/netcat_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/netcat_host_hint"
        />
    <EditText
        android:id="@+id/netcat_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/netcat_port_hint"
        />
    <EditText
        android:id="@+id/netcat_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/netcat_file_hint"
        />
    <Button
        android:id="@+id/netcat_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/netcat_start"
        />
</LinearLayout>
